{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@chem/*": ["src/app/chemistry/components/*"],
      "@chem-shared/*": ["src/app/chemistry/shared/*"],
      "@math/*": ["src/app/mathematics/components/*"],
      "@math-shared/*": ["src/app/mathematics/shared/*"],
      "@main/*": ["src/app/main/components/*"],
      "@shared/*": ["src/app/shared/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "skipLibCheck": true
  }
}
